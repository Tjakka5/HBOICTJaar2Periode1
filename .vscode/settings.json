{
	"path-autocomplete.pathMappings": {
		"$root": "${folder}/src",
	},
	"editor.codeActionsOnSave": {
		"source.fixAll": true,
		"source.organizeImports": true,
	},
	"eslint.format.enable": true,

	"files.exclude": {
		"node_modules/": true,
		".eslintrc.js": true,
		".gitignore": true,
		"LICENSE": true,
		//"package.json": true,
		"package-lock.json": true,
		"README.md": true,
		"tsconfig.json": true,
		"webpack.config.js": true,
		".vscode": true,
	}
}